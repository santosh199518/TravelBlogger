<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowPlaceActivity"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place_name"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/teal_200"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingEnd="5dp"
        android:id="@+id/place_location"
        app:drawableStartCompat="@drawable/ic_location"
        android:drawablePadding="5dp"
        android:textSize="15sp"
        android:textColor="@color/teal_200"
        app:drawableTint="#0000FF" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.smarteist.autoimageslider.SliderView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/places_photos"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorEnabled="true"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/purple_700"
                app:sliderIndicatorUnselectedColor="#FFF" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:numStars="5"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleIndicator"
                android:progressTint="#FFCC01"
                android:id="@+id/place_rating"/>
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/places_photos"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/place_specialities"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About:"
                android:textSize="20sp"
                android:textColor="@color/teal_200"
                android:id="@+id/description_title"
                android:layout_below="@id/place_specialities"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_title"
                android:id="@+id/place_description"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#FFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploader_details"
                android:text="Uploader Details"
                android:textColor="@color/teal_200"
                android:textSize="20sp"
                android:layout_below="@id/place_description" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:elevation="10dp"
                android:layout_below="@id/uploader_details"
                android:layout_marginTop="5dp"
                android:id="@+id/cv">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/uploader_image"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cv"
                android:layout_alignTop="@id/cv"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/teal_200"
                android:id="@+id/uploader_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/uploader_name"
                android:layout_alignStart="@id/uploader_name"
                android:textColor="@color/white"
                android:id="@+id/uploader_email"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/uploader_email"
                android:layout_alignStart="@id/uploader_name"
                android:textColor="@color/white"
                android:id="@+id/uploaded_date"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/teal_200"
                android:layout_below="@id/uploaded_date"
                android:id="@+id/separator1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/new_rating"
                android:layout_below="@id/uploaded_date"
                android:id="@+id/rate_title"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/teal_200"
                android:text="Rate this place"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/rate_title"
                android:layout_below="@id/uploaded_date"
                android:numStars="5"
                android:id="@+id/new_rating"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_rating"
                android:text="Comments"
                android:id="@+id/place_comments"
                android:textSize="20sp"
                android:textColor="@color/teal_200"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/place_comments"
                android:id="@+id/comment_lv"/>
            </RelativeLayout>
        </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/new_comment_layout"
            android:layout_weight="1">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Share your experience about this place"
                android:id="@+id/new_comment"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/add_new_comment"
            android:src="@drawable/ic_send"
            android:background="@color/teal_200"
            app:tint="#0000FF"/>
    </LinearLayout>
</LinearLayout>